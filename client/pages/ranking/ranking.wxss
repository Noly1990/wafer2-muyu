/* pages/ranking/ranking.wxss */

page {
  position: relative;
  background-color: #d8b36d;
}

.back-img {
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: -20;
}


.ranking-title-img {
  display: block;
  margin: 0 auto;
  padding:25rpx;
  width: 440rpx;
  height: 140rpx;
}


.ranking-box {
  width: 100%;
  height: 900rpx;
  overflow: scroll;
  color: white;
}

.ranking-list {
  display: flex;
  align-items: center;
  flex-direction: column;
}


.ranking-item {
  width: 80%;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}

.my-item {
  color: black;
  background-color: rgba(244,240, 119, 0.78);
  border: 1px solid red;
  border-radius: 20rpx;
}

.ranking-item:last-of-type {
  margin-bottom: 30rpx;
}

.ranking-content {
  display: flex;
  flex-direction: row;
  padding: 12rpx;
  
}
.ranking-index {
  flex: 1;
  margin-top: 25rpx;
  font-size: 0.9rem;
}
.ranking-avatar {
    flex: 1;
  width: 90rpx;
  height: 90rpx;
}

.ranking-name {
    flex: 2;
  margin-top: 25rpx;
  font-size: 0.9rem;
}

.ranking-score {
    flex: 2;
  font-size: 0.9rem;
  margin-top: 25rpx;
}