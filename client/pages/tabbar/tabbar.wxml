  <view class='tabbar-item {{active==1?"tabbar-item-active":""}}' bindtap='gotoRanking'><image class='img-btn' src='./lotus2.png'></image></view>
  <view class='tabbar-item {{active==2?"tabbar-item-active":""}}' bindtap='gotoBless'><image class='img-btn' src='./lotus3.png'></image></view>
  <view class='tabbar-item {{active==3?"tabbar-item-active":""}}' bindtap='gotoMine'><image class='img-btn' src='./lotus4.png'></image></view>
</view>