/* pages/tabbat/tabbar.wxss */

.tabbar-box {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  text-align: center;
  transform: translateZ(100px);
}

.tabbar-item {
  flex: 1;
  height: 100rpx;
}

.tabbar-item-active {
  animation: bigger 0.5s linear;
  animation-fill-mode: forwards;
}

@keyframes bigger {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(1.3);
  }
}

.img-btn {
  width: 100%;
  height: 100%;
}
