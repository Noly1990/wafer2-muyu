/* pages/mine/mine.wxss */

.mine-header {
  width: 100%;
  height: 20rpx;
  background-color: #fff193;
}

.user-info {
  text-align: center;
  background-color: #fff193;
  padding: 30rpx 0;
  border-radius: 0 0 50% 50%;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
}

.user-name {
  display: block;
  margin-top: 15rpx;
}

.detail {
  padding: 25rpx 40rpx;
  display: flex;
}

.detail-item {
  font-size: 0.9rem;
  text-align: center;
  flex: 1;
  color: #777;
}

.detail-title {
  margin-bottom: 20rpx;
}

.my-bonus-title {
  text-align: center;
  color: #777;
  width: 70%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #aaa;
  overflow: hidden;
}

.my-bonus-list {
  background-color: #eee;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 60rpx;
  margin-bottom: 120rpx;
}

.my-bonus-item {
  width: 140rpx;
  height: 220rpx;
  color: red;
  background: url('http://www.xiyoucc.com/img/itemback.png');
  background-size: cover;
  margin: 10rpx auto;
}

.my-bonus-item:nth-of-type(1) {
  margin-top: 20rpx;
}
.my-bonus-item:nth-of-type(2) {
  margin-top: 20rpx;
}
.my-bonus-item:nth-of-type(3) {
  margin-top: 20rpx;
}
.my-bonus-item:nth-of-type(4) {
  margin-top: 20rpx;
}


.item-spin {
  animation: spin 4s linear infinite;
}

.my-bonus-text {
  width: 0.8rem;
  font-size: 0.8rem;
  margin: 55rpx auto;
  font-weight: bold;
}

@keyframes spin {
  0% {
    transform: rotateY(0deg);
  }

  100% {
    transform: rotateY(360deg);
  }
}
