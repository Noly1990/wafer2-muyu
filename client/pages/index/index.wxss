/**index.wxss**/

page {
  position: relative;
  margin: 0;
  padding: 0;
  background-color: #cc010e;
}

.auto-qiao {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 5%;
  top:20%;
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border-radius: 50%;
  left: 40rpx;
  top: 40rpx;
}

.bonus-box {
  position: absolute;
  left: 40rpx;
  top: 180rpx;
  color: white;
  font-size: .9rem;
}

.coin-icon {
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}


.coin-add{
  font-size: .8rem;
  opacity: 0;
  transition: all .6s linear;
}

.coin-add-active {
  opacity: 1;
}

.muyu-box {
  margin: 0 auto;
  width: 380rpx;
  height: 270rpx;
  padding-top: 300rpx;
}

.muyu-img {
  display: block;
  width: 380rpx;
  height: 270rpx;
}

.muyu-active {
  animation: muyuShake 0.2s linear;
}

@keyframes muyuShake {
  0% {
    transform: scale(1);
  }

  25% {
    transform: scale(1.1);
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.score-text {
  display: block;
  position: absolute;
  background-color: rgba(255, 255, 255, 0.5);
  padding: 10rpx 70rpx;
  border-radius: 10rpx;
  font-size: 30px;
  text-align: center;
  left: 50%;
  transform: translateX(-50%) translateZ(100px);
  bottom: 20%;
}

@keyframes foShake {
  0% {
    transform: translateX(0px);
  }

  25% {
    transform: translateX(10px);
  }

  50% {
    transform: translateX(0px);
  }

  75% {
    transform: translateX(-10px);
  }

  100% {
    transform: translateX(0px);
  }
}

.music-btn {
  width: 70rpx;
  height: 70rpx;
}

.music-select {
  display: block;
  padding: 5rpx;
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  font-size: 13px;
  text-align: center;
}

.music-toggle {
  border-radius: 10rpx;
  background-color: rgba(247, 186, 129, 0.5);
}

.music-item {
  text-align: center;
  padding: 5rpx;
}

.music-active {
  background-color: orange;
  border-radius: 10rpx;
}

.light-img {
  margin: 0 auto;
  width: 760rpx;
  height: 790rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  z-index: -1;
  opacity: 0.2;
  transition: all 0.2s linear;
}

.light-active {
  opacity: 0.9;
}

.words-box {
  margin: 0 auto;
  width: 450rpx;
  height: 300rpx;
  background-color: #eee;
  overflow: hidden;
}

.words-window {
  padding: 30rpx;
  margin: 0 auto;
  position: relative;
  top: 0rpx;
}

.back-img {
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: -20;
}


.canvas-box {
  width: 320px;
  height: 200px;
  margin: 0 auto;
}