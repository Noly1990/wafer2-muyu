/**index.wxss**/
@import "../tabbar/tabbar.wxss";

page {
  position: relative;
  margin: 0;
  padding: 0;
  background-color: #cc010e; 
}

.auto-qiao {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 5%;
  top: 20%;
}

.container {
  width: 100vw;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border-radius: 50%;
  left: 40rpx;
  top: 40rpx;
}

.muyu-box {
  position: relative;
  top: -80rpx;
}

.muyu-img {
  display: block;
  margin: 0 auto;
  width: 380rpx;
  height: 270rpx;
}

.muyu-active {
  animation: muyuShake 0.2s linear;
}

@keyframes muyuShake {
  0% {
    transform: scale(1);
  }

  25% {
    transform: scale(1.1);
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.score-text {
  display: block;
  position: absolute;
  background-color: rgba(255, 255, 255, 0.5);
  padding: 10rpx 70rpx;
  border-radius: 10rpx;
  font-size: 30px;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
  top: 50%;
}

.fo-img {
  padding-top: 100rpx;
  display: block;
  margin: 0 auto;
  width: 680rpx;
  height: 800rpx;
}

.fo-active {
  animation: foShake .4s linear infinite;
}

@keyframes foShake {
  0% {
    transform: translateX(0px);
  }

  25% {
    transform: translateX(10px);
  }

  50% {
    transform: translateX(0px);
  }

  75% {
    transform: translateX(-10px);
  }

  100% {
    transform: translateX(0px);
  }
}

.music-btn {
  width: 70rpx;
  height: 70rpx;
}

.music-select {
  display: block;
  padding: 5rpx;
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  font-size: 13px;
  text-align: center;
}

.music-toggle {
  border-radius: 10rpx;
  background-color: rgba(247, 186, 129, 0.5);
}

.music-item {
  text-align: center;
  padding: 5rpx;
}

.music-active {
  background-color: orange;
  border-radius: 10rpx;
}

.ranking-box {
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(247, 186, 129, 0.6);
  transition: all 0.5s linear;
  z-index: 100;
}

.ranking-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.ranking-hidden {
  bottom: -375rpx;
  transition: all 0.5s linear;
}

.ranking-banner {
  text-align: center;
  padding: 8rpx 0;
}

.ranking-item {
  flex-basis: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.ranking-content {
  padding: 5px;
}

.ranking-avatar {
  width: 80rpx;
  height: 80rpx;
}

.ranking-name {
  font-size: 0.8rem;
}

.ranking-score {
  font-size: 0.8rem;
}

.light-img {
  margin: 0 auto;
  width: 760rpx;
  height: 790rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  z-index: -1;
  opacity: 0.2;
  transition: all 0.2s linear;
}

.light-active {
  opacity: 0.9;
}

.words-box {
  margin: 0 auto;
  width: 450rpx;
  height: 300rpx;
  background-color: #eee;
  overflow: hidden;
}

.words-window {
  padding: 30rpx;
  margin: 0 auto;
  position: relative;
  top: 0rpx;
}

.back-img {
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: -20;
}
